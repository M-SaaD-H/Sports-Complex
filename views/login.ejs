    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= formType === 'login' ? 'Login' : 'Sign Up' %></title>
    <link rel="stylesheet" href="/views/styles/global.css">
    <link rel="stylesheet" href="/views/styles/login.css">
</head>
<body>
    <div class="container">
        <div class="image"></div>
        <% if(formType === 'login') { %>
            <%- include("partials/login-form"); %>
